@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="blog-section">
    <div id="checkout-cart" class="container">
        <div class="row">


            <aside id="column-left" class="col-sm-3">

                <div class="category-content">
                    <div class="box-category">
                        <h3 class="toggled relative">Настройки</h3>
                        <ul class="list-unstyled parent" id="select-category">
                            <li>
                                <a asp-action="Index" asp-controller="Panel" class="list-group-item">Главная</a>
                            </li>
                            <li>
                                <a asp-action="categories" asp-controller="category" class="list-group-item">Категории</a>
                            </li>
                            <li>
                                <a asp-action="Dishes" asp-controller="Dish" class="list-group-item">Продукты</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <hr />
                                <li>
                                    <a asp-action="ShowOrders" asp-controller="Order" class="list-group-item">Заказы</a>
                                </li>

                                <li>
                                    <a asp-action="Users" asp-controller="Panel" class="list-group-item">Пользователи</a>
                                </li>

                                <li>
                                    <a asp-action="Statistics" asp-controller="Panel" class="list-group-item">Статистика</a>
                                </li>

                                <li>
                                    <a asp-action="Index" asp-controller="Role" class="list-group-item">Управления Ролями</a>
                                </li>

                                <li>
                                    <a asp-action="ContactSettings" asp-controller="Contact" class="list-group-item">Настройка обр. связи</a>
                                </li>                            

                            }
                        </ul>
                    </div>
                </div>


                <div class="category-content">
                    <div class="box-category">
                        <h3 class="toggled relative">Информация</h3>
                        <ul class="list-unstyled parent" id="select-category">

                            <li>
                                <a asp-action="Contact" asp-controller="Contact" class="list-group-item">Связаться с нами</a>
                            </li>

                        </ul>
                    </div>
                </div>

            </aside>




            <div id="content" class="col-sm-9  all-blog">
                @*Основное содержимое страницы*@
                @RenderBody()
            </div>


        </div>

    </div>


</div>

<!-- Секция для подгрузки скриптов из других представлений -->
@await RenderSectionAsync("Scripts", required: false)

