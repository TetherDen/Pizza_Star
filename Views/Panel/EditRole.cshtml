@using Pizza_Star.ViewModel
@model EditRoleViewModel

@{
    Layout = "_PanelLayout.cshtml";
    ViewData["Title"] = "Edit User Roles";
}


<h1>Editing User Roles</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="form-group">
        <label>Roles</label><br />
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role"
                @if (Model.UserRoles.Contains(role))
                {
                    <text>checked</text>
                } />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
