@using Pizza_Star.Models.Checkout
@model Order

@{
    ViewData["Title"] = "Оформление заказа";
}

<h2>Оформление заказа</h2>

<form asp-controller="Order" asp-action="CreateOrder" method="post">
    <div class="form-group">
        <label asp-for="Fio">ФИО:</label>
        <input asp-for="Fio" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Телефон:</label>
        <input asp-for="Phone" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label asp-for="City">Город:</label>
        <input asp-for="City" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Address">Адрес доставки:</label>
        <input asp-for="Address" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Подтвердить заказ</button>
</form>
