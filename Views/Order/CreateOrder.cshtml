@using Pizza_Star.ViewModel
@model CreateOrderViewModel

@{
    ViewData["Title"] = "Оформление заказа";
}

<h2 class="text-center">Оформление заказа</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <form asp-controller="Order" asp-action="CreateOrder" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="Fio">ФИО:</label>
                    <input asp-for="Fio" class="form-control"/>
                    <span asp-validation-for="Fio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City">Город:</label>
                    <input asp-for="City" class="form-control"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Адрес доставки:</label>
                    <input asp-for="Address" class="form-control"/>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mx-auto d-block btn-lg shadow-sm border-0 rounded-3 hover-custom">
                    Подтвердить заказ
                </button>
            </form>

        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}